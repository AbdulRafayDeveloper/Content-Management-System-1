<%- include('header') %>
    <div id="admin-content">
        <div class="container">
            <div class="row">
                <div class="col-md-offset-3 col-md-6" style="margin-left: 300px;">
                    <!-- Form for show edit-->
                    <% if(user){ %>
                        <form action="/dashboard/update-post" method="POST" enctype="multipart/form-data">
                            <h1 class="admin-heading text-center" style="font-weight: 600;">Update Post</h1>
                            <div class="form-group">
                                <input type="hidden" name="post_id_update" id="post_id_update" class="form-control"
                                    value="<%= user._id %>">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputTile"  style="font-size: 18px;font-weight: 600;">Title</label>
                                <input type="text" name="post_title_update" class="form-control mb-3" id="post_title_update"
                                    value="<%= user.p_title %>" style="font-size: 14px;">
                            </div>
                            <div class="form-group">
                                <label  style="font-size: 18px;font-weight: 600;"> Description</label>
                                <textarea id="summernote" name="summernote" required><%= user.p_description %></textarea>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputCategory"  style="font-size: 18px;font-weight: 600;" class="mt-3">Category</label>
                                <select class="form-control mb-3" name="category_update" id="category_update" style="font-size: 14px;">
                                    <% category1.forEach((row)=> { %>
                                        <option style="font-size: 14px;" value="<%= row.c_name %>" <%=row.c_name===user.c_name ? 'selected' : ''
                                            %>>
                                            <%= row.c_name %>
                                        </option>
                                        <% }); %>
                                </select>
                            </div>
                            <div class="form-group">
                                <label  style="font-size: 18px;font-weight: 600;">Image</label>
                                <input type="file" name="c_image_update" id="c_image_update" style="font-size: 14px;" class=" mb-3">
                                <img src="/images/<%= user.p_image %>" height="100px;width:100px" >
                                <input type="hidden" name="old_image_update" id="old_image_update"
                                    value="<%= user.p_image %>">
                            </div>
                            <input type="submit" name="submit" class="btn btn-primary mt-3" value="Update" style="font-size: 15px;width: 80px;height: 32px;" />
                        </form>
                        <!-- Form End -->
                        <% } else { %>
                            <h1 class="text-center text-secondary mt-5">No records Found</h1>
                            <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <div id="footer" style="font-size: 16px;">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <span>&copy; 2023 News | Powered by Meta Solution</span>
                </div>
            </div>
        </div>
    </div>
    <!-- /Footer -->
    </body>
    <script>
        // Initialize the Summernote editor
        $('#summernote').summernote({
            placeholder: '<span style="font-size: 14px;">Write your description</span>',
            tabsize: 2,
            height: 120,
            toolbar: [
                ['style', ['style']],
                ['font', ['bold', 'underline', 'clear']],
                ['color', ['color']],
                ['para', ['ul', 'ol', 'paragraph']],
                ['table', ['table']],
                ['insert', ['link', 'picture', 'video']],
                ['view', ['fullscreen', 'codeview', 'help']]
            ]
        });
    </script>

    </html>