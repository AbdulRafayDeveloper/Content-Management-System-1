<%- include('header') %>
    <div id="admin-content">
        <div class="container">
            <div class="row">
                <div class="col-md-10">
                    <h1 class="admin-heading">All Posts</h1>
                </div>
                <div class="col-md-2">
                    <a class="add-new" href="/dashboard/add-post">add post</a>
                </div>
                <div class="col-md-12">
                    <% if(user3 !=="" ){ %>
                        <table class="content-table" style="border: none;" id="dt1">
                            <thead>
                                <th style="font-size: 16px;" class="text-center">S.No.</th>
                                <th style="font-size: 16px;" class="text-center">Post Title</th>
                                <th style="font-size: 16px;" class="text-center">Category Name</th>
                                <th style="font-size: 16px;" class="text-center">Author</th>
                                <th style="font-size: 16px;" class="text-center">Date</th>
                                <th style="font-size: 16px;" class="text-center">Edit</th>
                                <th style="font-size: 16px;" class="text-center">Delete</th>
                            </thead>
                            <tbody>
                                <% user3.forEach((row, index)=> { %>
                                    <tr>
                                        <td style="font-size: 15px;" class="text-center">
                                            <%= index+1 %>
                                        </td>
                                        <td style="font-size: 15px;" class="text-center">
                                            <%= row.p_title %>
                                        </td>
                                        <td style="font-size: 15px;" class="text-center">
                                            <%= row.c_name %>
                                        </td>
                                        <td style="font-size: 15px;" class="text-center">
                                            <% if (row.p_role==0) { %>
                                                Editor
                                                <% } else { %>
                                                    Admin
                                                    <% } %>
                                        </td>
                                        <td style="font-size: 15px;" class="text-center">
                                            <%= row.p_date.toLocaleDateString('en-US', { year: 'numeric' ,
                                                month: 'short' , day: 'numeric' }) %>
                                        </td>
                                        <td style="font-size: 15px;" class="text-center">
                                            <!-- Edit User button -->
                                            <a href="/dashboard/update-post/<%= row._id %>" class="text-danger">
                                                <i class="fas fa-edit fa-lg mx-1"></i>
                                            </a>
                                        </td>
                                        <td style="font-size: 15px;" class="text-center">
                                            <!-- Delete User button -->
                                            <a style="cursor: pointer;" class="text-danger"
                                                onclick="deletePost('<%= row._id %>')">
                                                <i class="fas fa-trash fa-lg mx-1"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>

                        <!-- Edit Modal -->
                        <div class="modal fade" id="editModalPost" tabindex="-1" aria-labelledby="editModalLabel"
                            aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="editModalLabel" style="font-size: 18px;">Edit User
                                        </h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"
                                            style="height: 20px; width: 40px;background-color: black;color:white;border: none;border-radius: 1;">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <form id="edit-category">
                                            <input type="hidden" name="postId" id="postId" value="">
                                            <div class="mb-3">
                                                <label class="form-label" style="font-size: 16px;">Category
                                                    Name:</label>
                                                <input type="text" class="form-control" id="categoryName"
                                                    name="categoryName" value="" style="height: 30px;font-size: 14px;">
                                            </div>
                                            <button type="button" class="btn btn-success" id="update-btn"
                                                onclick="updatePost(document.getElementById('postId').value)"
                                                style="height: 35px;width: 100px;font-size: 14px;">Update
                                                User</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <% } else { %>
                            <h1 class="text-center text-secondary mt-5">No records Found</h1>
                            <% } %>

                                <!-- <ul class='pagination admin-pagination'>
                                    <li class="active"><a>1</a></li>
                                    <li><a>2</a></li>
                                    <li><a>3</a></li>
                                </ul> -->
                </div>
            </div>
        </div>
    </div>
    <%- include('footer') %>