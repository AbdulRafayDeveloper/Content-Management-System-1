<%- include('header') %>
    <div id="admin-content">
        <div class="container">
            <div class="row">
                <div class="col-md-offset-3 col-md-6">
                    <!-- Form Start -->
                    <form action="#" id="add-form" method="POST" autocomplete="off">
                        <h1 class="admin-heading text-center">Add User</h1>
                        <div class="form-group">
                            <label style="font-size: 16px;">Email</label>
                            <input style="font-size: 14px;" type="email" name="email" id="email" class="form-control" placeholder="Email" required>
                        </div>
                        <div class="form-group">
                            <label style="font-size: 16px;">User Name</label>
                            <input style="font-size: 14px;" type="text" name="username" id="username" class="form-control" placeholder="Username" required>
                        </div>

                        <div class="form-group">
                            <label style="font-size: 16px;">Password</label>
                            <input style="font-size: 14px;" type="password" name="password" id="password" class="form-control" placeholder="Password" required>
                        </div>
                        <div class="form-group">
                            <label style="font-size: 16px;">User Role</label>
                            <select class="form-control" name="role" id="role" style="font-size: 14px;">
                                <option value="0">Editor</option>
                                <option value="1">Admin</option>
                            </select>
                        </div>
                        <input type="submit" name="save" class="btn btn-primary" value="Save" style="font-size: 15px;width: 80px;height: 30px;" required />
                    </form>
                    <!-- Form End-->
                </div>
            </div>
        </div>
    </div>
    <%- include('footer') %>