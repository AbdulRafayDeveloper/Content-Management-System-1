<%- include('header') %>
    <div id="main-content">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <!-- post-container -->
                    <div class="post-container">
                        <% if(row!=="" ){ %>
                            <% console.log(row) %>
                                <div class="post-content single-post">
                                    <h3><%= row.p_title %></h3>
                                    <div class="post-information">
                                        <span>
                                            <i class="fa fa-tags" aria-hidden="true"></i>
                                            <%= row.c_name %>
                                        </span>
                                        <span>
                                            <i class="fa fa-user" aria-hidden="true"></i>
                                            <a href='author?email=<%= row.email %>'><%= row.email %></a>
                                        </span>
                                        <span>
                                            <i class="fa fa-calendar" aria-hidden="true"></i>
                                            <% const date=new Date(row.p_date); %>
                                                            <%= date.toLocaleDateString('en-US', { weekday: 'short' ,
                                                                month: 'short' , day: 'numeric' }); %>
                                        </span>
                                    </div>
                                    <img class="single-feature-image" src="images/<%= row.p_image %>" alt="" />
                                    <p class="description">
                                        <%- row.p_description %>
                                    </p>
                                </div>
                                    <% } else { %>
                                        <h1 class="text-center text-secondary mt-5">No records Found</h1>
                                        <% } %>
                    </div>
                    <!-- /post-container -->
                </div>
                <%- include('sidebar') %>
            </div>
        </div>
    </div>
    <%- include('footer') %>