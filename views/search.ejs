<%- include('header') %>
    <div id="main-content">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <!-- post-container -->
                    <div class="post-container">
                        <h2 class="page-heading">Search:<%= input %>
                        </h2>
                        <% if(user!=="" ){ %>
                            <% user.forEach((row, index)=> { %>
                                <div class="post-content">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <a class="post-img" href='single?id=<%= row._id %>'><img
                                                    src="images/<%= row.p_image %>" alt="" /></a>
                                        </div>
                                        <div class="col-md-8">
                                            <div class="inner-content clearfix">
                                                <h3><a href='single?id=<%= row._id %>'>
                                                        <%= row.p_title %>
                                                    </a></h3>
                                                <div class="post-information">
                                                    <span>
                                                        <i class="fa fa-tags" aria-hidden="true"></i>
                                                        <a href='category?c_name=<%= row.c_name %>'>
                                                            <%= row.c_name %>
                                                        </a>
                                                    </span>
                                                    <span>
                                                        <i class="fa fa-user" aria-hidden="true"></i>
                                                        <a href='author?email=<%= row.email %>'>
                                                            <%= row.email %>
                                                        </a>
                                                    </span>
                                                    <span>
                                                        <i class="fa fa-calendar" aria-hidden="true"></i>
                                                        <% const date=new Date(row.p_date); %>
                                                            <%= date.toLocaleDateString('en-US', { weekday: 'short' ,
                                                                month: 'short' , day: 'numeric' }); %>
                                                    </span>
                                                </div>
                                                <p class="description">
                                                    <% const cleanedDescription=row.p_description.replace(/<[^>]+>/g,
                                                        ''); %>
                                                        <% let truncatedDescription=cleanedDescription.slice(0, 170); %>
                                                            <%= truncatedDescription %>...
                                                </p>
                                                <a class=' read-more pull-right' href='single?id=<%= row._id %>'>read
                                                    more</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% }) %>
                                    <% } else { %>
                                        <h1 class="text-center text-secondary mt-5">No records Found</h1>
                                        <% } %>
                                            <ul class='pagination'>
                                                <li class="active"><a href="">1</a></li>
                                                <li><a href="">2</a></li>
                                                <li><a href="">3</a></li>
                                            </ul>
                    </div><!-- /post-container -->
                </div>
                <%- include('sidebar') %>
            </div>
        </div>
    </div>
    <%- include('footer') %>